@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create a Cover Type</a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped text-center" style="width:100%">
        <thead>
           <tr>
               <th>
                   Cover Name
               </th>
               <th></th>
           </tr>
        </thead>
        <tbody>
          
                @foreach(var item in Model)
                {
                    <tr>
                    <td style="width:50%">
                        @item.Name
                    </td>
                    <td>
                        <div class="btn btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                    </td>
                    </tr>
                }
         
        </tbody>

    </table>
</div>

